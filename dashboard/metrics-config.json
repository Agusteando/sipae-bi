{
  "version": "1.0.0",
  "metrics": {
    "entregas": {
      "id": "entregas",
      "label": "Entregas Mensuales",
      "defaultChartType": "kpi",
      "allowedChartTypes": ["kpi", "bar", "pie", "line", "gauge"],
      "colorScheme": "primary",
      "showComparison": true,
      "drilldown": {
        "enabled": true,
        "targetMetric": "entregas_detalle",
        "paramMapping": {
          "plantel": "plantel",
          "mes": "mes",
          "year": "year"
        }
      }
    },
    "entregas_detalle": {
      "id": "entregas_detalle",
      "label": "Lista de Entregas",
      "defaultChartType": "table",
      "allowedChartTypes": ["table", "list"],
      "colorScheme": "secondary",
      "showComparison": true,
      "drilldown": {
        "enabled": false
      }
    },
    "entregas_global": {
      "id": "entregas_global",
      "label": "Entregas Global",
      "defaultChartType": "bar",
      "allowedChartTypes": ["bar", "pie", "treemap", "heatmap"],
      "colorScheme": "primary",
      "showComparison": false,
      "drilldown": {
        "enabled": true,
        "targetMetric": "entregas",
        "paramMapping": {
          "id": "plantelId",
          "month": "month",
          "year": "year"
        }
      }
    },
    "planeaciones": {
      "id": "planeaciones",
      "label": "Planeaciones Revisadas",
      "defaultChartType": "progress",
      "allowedChartTypes": ["progress", "bar", "table"],
      "colorScheme": "success",
      "showComparison": true,
      "drilldown": {
        "enabled": false
      }
    },
    "bitacoras": {
      "id": "bitacoras",
      "label": "Bitácoras",
      "defaultChartType": "calendar",
      "allowedChartTypes": ["calendar", "heatmap", "table"],
      "colorScheme": "info",
      "showComparison": true,
      "drilldown": {
        "enabled": false
      }
    },
    "observaciones": {
      "id": "observaciones",
      "label": "Observaciones GRUTA",
      "defaultChartType": "html",
      "allowedChartTypes": ["html", "text"],
      "colorScheme": "warning",
      "showComparison": true,
      "drilldown": {
        "enabled": false
      }
    },
    "sapf": {
      "id": "sapf",
      "label": "Atención a Padres (SAPF)",
      "defaultChartType": "bar",
      "allowedChartTypes": ["bar", "pie", "radar", "table"],
      "colorScheme": "accent",
      "showComparison": true,
      "drilldown": {
        "enabled": false
      }
    },
    "attendance": {
      "id": "attendance",
      "label": "Seguimiento a Ausencias",
      "defaultChartType": "bar",
      "allowedChartTypes": ["bar", "stackedBar", "line", "table"],
      "colorScheme": "danger",
      "showComparison": true,
      "drilldown": {
        "enabled": false
      }
    },
    "ruta": {
      "id": "ruta",
      "label": "Ruta (conteo por observador)",
      "defaultChartType": "bar",
      "allowedChartTypes": ["bar", "pie", "table"],
      "colorScheme": "primary",
      "showComparison": false,
      "drilldown": {
        "enabled": false
      }
    }
  },
  "colorSchemes": {
    "primary": {
      "light": ["#3b82f6", "#60a5fa", "#93c5fd"],
      "dark": ["#60a5fa", "#93c5fd", "#bfdbfe"]
    },
